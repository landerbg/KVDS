<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "info.mrep.mkvd"
        version   = "0.4">

    <name>Kitchen video display system</name>

    <description>
        Kitchen video display system
    </description>

    <author href="http://mrep.info" email="p_zlatev80@yahoo.com">
        Mrep team
    </author>

    <!--
        Enable individual API permissions here.
        The "device" permission is required for the 'deviceready' event.
    -->


    <!--
        If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires.
    -->
 
	

    <!-- Customize your app and platform with the preference element. -->
    <preference name="phonegap-version"           value="cli-6.5.0" />          <!-- all: current version of PhoneGap -->
    <preference name="orientation"                value="landscape" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen"                 value="false" />           <!-- all: hides the status bar at the top of the screen -->
    <preference name="android-minSdkVersion"      value="9" />              <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-targetSdkVersion"   value="15" />
	<preference name="android-installLocation"    value="auto" /> 
	<preference name="EnableViewportScale" value="true" />	
	<preference name="loadUrlTimeoutValue" value="99999999" />
    <!-- Plugins can also be added here. --> 
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-device-orientation" spec="~1.0.5" />
    <plugin name="cordova-plugin-media" spec="~2.4.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
	<plugin name="cordova-plugin-whitelist" spec="~1.3.1" />
    
	<plugin name="cordova-plugin-insomnia"/>
	

	
    <!--  window.plugins.insomnia.keepAwake(); -->
    <!-- window.plugins.insomnia.allowSleepAgain(); -->
	

    <!-- Define app icon for each platform. -->
   
	 <!-- Define app icon for each platform. -->
    
    <icon src="themes/logo/logo_32x32.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="themes/logo/logo_32x32.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="themes/logo/logo_64x64.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="themes/logo/logo_128x128.png"  gap:platform="android"    gap:density="xhdpi" />
	<allow-navigation href="*" />
    

</widget>
